
" set indent to 4 spaces
set tabstop=4
set shiftwidth=4
set expandtab

" golang hard tabs
au FileType go set noexpandtab

" word wrap without line breaks
set lbr

" change default to ignore case for text searches
set ignorecase
set smartcase

" highlight all search pattern matches
set hlsearch

" auto indenting
set cindent
set autoindent

" centre cursor when searching
set scrolloff=999

" show line numbers
set number
